---
interface Props {
    objectives: { title: string; description: string }[];
}

const {objectives} = Astro.props;
---

<div class="shadow-xl rounded-xl p-6 dark:bg-gray-800 mb-8">
    <h2 class="text-center !text-xl">Key Learning Objectives</h2>
    <ul class="list-none">
        {objectives.map((obj, index) => (
                <li class="flex items-start gap-2">
                    <div>✔️</div>
                    <div class="!my-0">
                        <div class="font-bold">{obj.title}</div>
                        <div class="opacity-80 !mt-0 !text-md">{obj.description}</div>
                    </div>

                </li>
        ))}
    </ul>
</div>
